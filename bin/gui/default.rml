<rml>
<head>
	<link type="text/rcss" href="css/default.rcss"/>
	<style>
		div#chatbox {
			display: block;
			width: 400px;
			height: 200px;
			padding: 5px 10px;
			padding-right: 0;
		}
		div#chattext {
			display: block;
			background-color: rgba(0, 0, 0, 0);
			height: 100%;
			overflow-y: scroll;
			overflow-x: hidden;
		}
	</style>
</head>
<body>
	<handle move_target="#document">
		<div id="chatbox">
			<div id="chattext"></div>
		</div>
	</handle>
</body>
</rml>
